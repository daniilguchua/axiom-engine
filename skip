    --text-primary: #FAFAFA;      /* Headlines, important */
    --text-secondary: #A1A1AA;    /* Body text */
    --text-muted: #71717A;        /* Captions, hints */
    --text-disabled: #52525B;     /* Disabled states */
    
    /* === ACCENT (Violet) === */
    --accent: #8B5CF6;            /* Primary actions */
    --accent-hover: #A78BFA;      /* Hover state */
    --accent-muted: rgba(139, 92, 246, 0.15);  /* Backgrounds */
    --accent-glow: rgba(139, 92, 246, 0.4);    /* Subtle glow */
    
    /* === SEMANTIC === */
